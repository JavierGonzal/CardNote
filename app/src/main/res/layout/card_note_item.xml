<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_note_item_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/card_note_item_title_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_item_margin"
        android:layout_marginEnd="@dimen/title_item_margin"
        android:layout_marginStart="@dimen/title_item_margin"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:textAlignment="gravity"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/card_note_item_description_textView"
        app:layout_constraintStart_toEndOf="@+id/card_note_item_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_note_item_description_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_margin"
        android:layout_marginEnd="@dimen/item_margin"
        android:layout_marginStart="@dimen/item_margin"
        android:layout_marginTop="@dimen/item_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/card_note_item_imageView"
        app:layout_constraintTop_toBottomOf="@+id/card_note_item_title_textView" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/card_note_item_imageView"
        android:layout_width="@dimen/circle_item_size"
        android:layout_height="@dimen/circle_item_size"
        android:layout_marginStart="@dimen/item_margin"
        android:background="@drawable/circle"
        app:civ_border_color="@color/colorTitle"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>